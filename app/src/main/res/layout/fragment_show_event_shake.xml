<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#000000"
             tools:context="com.ict.dg_knight.qalarm.ShowEventShakeFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/shakeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shakeIt"
            android:textSize="25sp"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/progess_1"
            android:layout_marginBottom="24dp"
            app:layout_constraintRight_toRightOf="@+id/progess_1"
            app:layout_constraintLeft_toLeftOf="@+id/progess_1"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cloud"
            android:id="@+id/imageView3"
            android:contentDescription=""
            tools:ignore="ContentDescription"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintBottom_toTopOf="@+id/progess_1"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.100000024" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cloud"
            android:id="@+id/imageView7"
            tools:ignore="ContentDescription"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/shakeIt"
            app:layout_constraintVertical_bias="0.13" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/blue"
            android:id="@+id/textClock"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/shakeIt"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/progess_1"
            android:layout_marginBottom="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textClock" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progess_1"
            android:layout_width="290dp"
            app:rcBackgroundPadding="5dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
